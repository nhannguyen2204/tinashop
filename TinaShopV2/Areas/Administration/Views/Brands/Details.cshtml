@using TinaShopV2.Common;
@using TinaShopV2.Common.Extensions;

@model TinaShopV2.Areas.Administration.Models.Brand.BrandViewModel

@{
    ViewBag.Title = string.Format(GlobalObjects.TitleFormat, Resources.Commons.Detail, Resources.Commons.Brand);
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Commons.Detail</h2>

<div>
    <h4>@Resources.Commons.Brand</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Commons.Edit, "Edit", ViewContext.LocalizeRouteValues(new { BrandCode = Model.BrandCode })) |
    @Html.ActionLink(@Resources.Commons.BackToList, "Index", ViewContext.LocalizeRouteValues())
</p>
