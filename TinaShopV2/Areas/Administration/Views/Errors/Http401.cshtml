@using TinaShopV2.Common;
@using TinaShopV2.Common.Extensions;

@{
    ViewBag.Title = string.Format(GlobalObjects.TitleFormat, "Error", Resources.Commons.Http500);
    Layout = "~/Areas/Administration/Views/Shared/_AnonymousLayout.cshtml";
}

<!-- row -->
<div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <div class="row">
            <div class="col-sm-12">
                <div class="text-center error-box">
                    <h1 class="error-text tada animated"><i class="fa fa-times-circle text-danger error-icon-shadow"></i> Error 401</h1>
                    <h2 class="font-xl"><strong>Oooops, You do not have permission to view this directory or page.</strong></h2>
                    <br />
                    <p class="lead semi-bold">
                        <strong>Please login with other user. (<a href="@Url.Action("LogIn", "Account", new { @area = "Administration", @ReturnUrl = HttpContext.Current.Request.RawUrl })">Login</a>)</strong><br><br>
                    </p>
                    <ul class="error-search text-left font-md">
                        <li><a href="javascript:void(0);"><small>Go to My Dashboard <i class="fa fa-arrow-right"></i></small></a></li>
                        <li><a href="javascript:void(0);"><small>Contact SmartAdmin IT Staff <i class="fa fa-mail-forward"></i></small></a></li>
                        <li><a href="javascript:void(0);"><small>Report error!</small></a></li>
                        <li><a href="javascript:void(0);"><small>Go back</small></a></li>
                    </ul>
                </div>

            </div>

        </div>

    </div>

</div>
<!-- end row -->
