@using TinaShopV2.Common;
@using TinaShopV2.Common.Extensions;

@model TinaShopV2.Areas.Administration.Models.TinaMenu.TinaMenuViewModel

@{
    ViewBag.Title = string.Format(GlobalObjects.TitleFormat, Resources.Commons.Detail, Resources.Commons.TinaMenu);
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Commons.Detail</h2>

<div>
    <h4>@Resources.Commons.TinaMenu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.MenuTypeId)</dt>
        <dd>@(Model.MenuTypeObj != null ? Model.MenuTypeObj.Name : string.Empty)</dd>
        <dt>@Html.DisplayNameFor(model => model.ParentId)</dt>
        <dd>@(Model.ParentObj != null ? Model.ParentObj.Name : string.Empty)</dd>
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>@Html.DisplayNameFor(model => model.CssClass)</dt>
        <dd>@Html.DisplayFor(model => model.CssClass)</dd>
        <dt>@Html.DisplayNameFor(model => model.IsHidden)</dt>
        <dd>@Html.DisplayFor(model => model.IsHidden)</dd>
        <dt>@Html.DisplayNameFor(model => model.ActionId)</dt>
        <dd>@(Model.ActionObj != null ? Url.Action(Model.ActionObj.Action,Model.ActionObj.Controller,new {@area = Model.ActionObj.Area}) : string.Empty)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Commons.Edit, "Edit", ViewContext.LocalizeRouteValues(new { id = Model.Id })) |
    @Html.ActionLink(@Resources.Commons.BackToList, "Index", ViewContext.LocalizeRouteValues(new { @menuTypeId = Model.MenuTypeId }))
</p>
