@using TinaShopV2.Common.Extensions;
@using TinaShopV2.Common;

@{
    var owinContext = Context.GetOwinContext();
    var sliders = owinContext.GetAllSliderViewModels().Where(m => m.IsPublished).OrderBy(m => m.OrderNumber);
}

<!--Hero Slider-->
<section class="hero-slider">
    <div class="master-slider" id="hero-slider">

        @foreach (var item in sliders)
        {
            <div class="ms-slide" data-delay="7">
                <div class="overlay"></div>
                <img src="/Content/LIMO/masterslider/blank.gif" data-src="@(Path.Combine(GlobalObjects.MediaImageFolderPath,item.GetImage().FilePath))" alt="@item.Name" />
                <h2 style="width: 456px; left: 110px; top: 215px;" class="dark-color ms-layer" data-effect="top(50,true)" data-duration="700" data-delay="250" data-ease="easeOutQuad">@item.Name</h2>
                @*<p style="width: 456px; left: 110px; top: 210px;" class="dark-color ms-layer" data-effect="back(500)" data-duration="700" data-delay="500" data-ease="easeOutQuad">In this slider (which works both on touch screen and desktop devices) you can change the title, the description and button texts. It's all that you need to demonstrate your top rated products. </p>*@
                <div style="left: 110px; top: 300px;" class="ms-layer button" data-effect="left(50,true)" data-duration="500" data-delay="750" data-ease="easeOutQuad"><a class="btn btn-primary" href="@item.Link" title="@item.Name">Xem chi tiết ...</a></div>
                @*<div style="left: 350px; top: 300px;" class="ms-layer button" data-effect="bottom(50,true)" data-duration="700" data-delay="950" data-ease="easeOutQuad"><a class="btn btn-primary" href="@item.Link">Browse all</a></div>*@
            </div>
        }

    </div>
</section><!--Hero Slider Close-->